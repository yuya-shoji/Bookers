<h1>Books</h1>
<table>
   <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
    <% @books.each do |book| %>
    <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
     <td><%= link_to "Show", book_path(book.id) %></td>
     <td><%= link_to "Edit", edits_book_path(book.id) %></td>
     <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
    </tr>
    <% end %>
       </thead>
  </table>

<h2> New book </h2>

<!-- form_with部分 -->
<%= form_with model: @book, local: true do |f| %>
  <% if @book.errors.any? %>
  <h3><%= pluralize(@book.errors.count,"error") %> prohibited this book from being saved:</h3>
  <% @book.errors.full_messages.each do |message| %>
  <ul>
      <li><%= message %></li>
  </ul>
  <% end %>
  <% end %>
 <div>
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>

  <div>
    <label for="book_body">Body</label>
    <%= f.text_area :body %>

  <div>
  <%= f.submit 'Create Book' %>
  </div>

<% end %>